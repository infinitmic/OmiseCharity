<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin_4"
    android:background="@color/colorPrimary"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin_2">
        <ImageView
            android:id="@+id/ivCharity"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/size_72dp"
            android:layout_height="@dimen/size_72dp" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10dp"
            android:ellipsize="end"
            android:layout_gravity="start|center_vertical"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</androidx.cardview.widget.CardView>